<h1>Listing bids</h1>

<table>
  <tr>
    <th>Offer date</th>
    <th>Value</th>
    <th>Withraw</th>
    <th>Auction</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bids.each do |bid| %>
  <tr>
    <td><%= bid.offer_date %></td>
    <td><%= bid.value %></td>
    <td><%= bid.withraw %></td>
    <td><%= bid.auction_id %></td>
    <td><%= bid.user_id %></td>
    <td><%= link_to 'Show', auction_bid_path(@auction, bid) %></td>
    <td><%= link_to 'Edit', edit_auction_bid_path(@auction, bid) %></td>
    <td><%= link_to 'Destroy', auction_bid_path(@auction, bid), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bid', new_auction_bid_path(@auction) %>

